<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= paginate @entries %>
      <ol class="microposts">
        <%= render @entries %>
      </ol>
  </div>
</div>
